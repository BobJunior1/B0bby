            end
        end
    end

    RunService.RenderStepped:Connect(updateImageLabel)
end

-- Execute the showMessages function concurrently with setCamera and teleportPlayer
spawn(showMessages)
delay(5, setCamera)
delay(5,teleportPlayer)

-- Set up the image label follower after 5 seconds
delay(33, setupImageLabel)
